<?xml version="1.0" encoding="utf-8"?>
<view:LogDisplayClass xmlns:mx="http://www.adobe.com/2006/mxml"
					  xmlns:view="org.bigbluebutton.modules.log.view.*">
	
	<mx:Script>
		<![CDATA[
			public function clearDisplay(){
				status_txt.htmlText = "";
			}
		]]>
	</mx:Script>
	<mx:Box>
		<mx:TextArea id="status_txt" updateComplete="updateScroll()"
					 cornerRadius="4" borderColor="0xD0D0D0"
					 width="100%" height="100%" borderStyle="solid"  
					 textIndent="6" fontSize="10" focusEnabled="false"
					 editable="false" htmlText="{ log.statusText }"/>
	</mx:Box>
	<mx:Box>
		<!-- DATAGRID -->
	</mx:Box>
	
</view:LogDisplayClass>
